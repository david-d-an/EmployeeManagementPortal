# FROM mcr.microsoft.com/dotnet/core/aspnet:3.1 AS build-env
FROM mcr.microsoft.com/dotnet/sdk:3.1 AS build-env
WORKDIR /App

# COPY ./EMP.Api/*.csproj ./EMP.Api
# COPY ./EMP.Common/*.csproj ./EMP.Common
# COPY ./EMP.Data/*.csproj ./EMP.Data
# COPY ./EMP.DataAccess/*.csproj ./EMP.DataAccess

COPY ./EMP.Api ./EMP.Api
COPY ./EMP.Common ./EMP.Common
COPY ./EMP.Data ./EMP.Data
COPY ./EMP.DataAccess ./EMP.DataAccess
RUN dotnet restore
RUN dotnet publish ./EMP.Api/*.csproj -c Release -o ./out

FROM mcr.microsoft.com/dotnet/aspnet:3.1 
WORKDIR /App
COPY --from=build-env /App/out .

ENV DOTNET_ENVIRONMENT=Docker
ENV ASPNETCORE_ENVIRONMENT=Docker

RUN apt-get update -y \
    && apt-get install -y --no-install-recommends openssh-server
RUN mkdir -p /run/sshd && echo "root:Docker!" | chpasswd
COPY ./EMP.Api/DockerSettings/sshd_config /etc/ssh/
EXPOSE 2222

ENTRYPOINT [ \
    "/bin/bash", \
    "-c", \
    "/usr/sbin/sshd && dotnet EMP.Api.dll" \
]
